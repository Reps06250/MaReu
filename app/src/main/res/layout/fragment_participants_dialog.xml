<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UI.AddMeeting.DureePicker"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center"
    android:layout_height="match_parent">
    <TextView android:id="@+id/participants_title"
        android:layout_width="@dimen/fragment_participants_dialog_title_text_width"
        android:layout_height="wrap_content"
        android:text="@string/fragment_participants_dialog_title"
        android:background="@color/colorPrimary"
        android:textColor="#fff"
        android:textSize="@dimen/fragment_participants_dialog_title_text_size"
        android:gravity="center"
        android:padding="5dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/participant_et"
        android:hint="@string/fragment_participants_dialog_participant_et"
        android:textSize="@dimen/fragment_participants_dialog_et_text_size"
        android:gravity="center"
        android:padding="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_participants_dialog_add"
        android:textSize="@dimen/fragment_dialog_button"
        android:id="@+id/add_participant"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ok_participants_bt"
        android:backgroundTint="@color/colorPrimary"
        android:text="@string/ok"
        android:textColor="@android:color/white"
        android:textSize="@dimen/fragment_dialog_button"/>

</LinearLayout>