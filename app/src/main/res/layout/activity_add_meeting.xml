<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.AddMeeting.AddMeetingActivity"
    android:background="@drawable/gradient"
    android:id="@+id/add_activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOUVELLE RÉUNION"
        android:id="@+id/title"
        android:textStyle="bold"
        android:textSize="35sp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_bt"
        android:background="@drawable/border"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:text="Date de la réunion"
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/room_bt"
        android:background="@drawable/border"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:text="Salle de réunion"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/time_bt"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/duree_bt"
        android:background="@drawable/border"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:text="Durée de la réunion"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/date_bt"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_bt"
        android:background="@drawable/border"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:text="Heure de la réunion"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/duree_bt"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subject_bt"
        android:background="@drawable/border"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:text="Sujet de la réunion"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/room_bt"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/participants_bt"
        android:background="@drawable/border"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:text="Participants de la réunion : "
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/subject_bt"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/participants_tv"
        android:layout_below="@+id/participants_bt"
        android:gravity="center"
        android:text=""
        android:textSize="20sp"
        android:textColor="#C03469C3"
        android:singleLine="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ok_fab"
        app:elevation="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_done_all_white_24dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/participants_tv"/>

</RelativeLayout>